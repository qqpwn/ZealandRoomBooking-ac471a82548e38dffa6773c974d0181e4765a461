<Page
    x:Class="ZealandRoomBooking.View.LokaleBookingSide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZealandRoomBooking.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Dato" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="110,20,110,20" TextAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="Bold"/>
        <Button Content="LArrow" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Height="50" Width="70" Margin="40,0,0,0"/>
        <Button Content="RArrow" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Height="50" Width="70" Margin="35,0,0,0"/>

        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Height="50" Width="100" FontSize="12" FontWeight="Bold">
            <StackPanel>
                <TextBlock Text="Sorter"></TextBlock>
                <TextBlock Text="Ledighed"></TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Height="50" Width="100" FontSize="12" FontWeight="Bold">
            <StackPanel>
                <TextBlock Text="Sorter"></TextBlock>
                <TextBlock Text="Bygning"></TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Height="50" Width="100" FontSize="12" FontWeight="Bold">
            <StackPanel>
                <TextBlock Text="Sorter"></TextBlock>
                <TextBlock Text="Etage"></TextBlock>
            </StackPanel>
        </Button>

        <TextBlock Text="Lokale    Bygning    Etage " FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="35,0,0,70"/>
        <ListView Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="35,60,0,0"/>
        <TextBlock Text="Ledighed" Grid.Column="2" Grid.Row="2" Margin="0,0,35,70" TextAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <ListView Grid.Column="2" Grid.Row="2" Grid.RowSpan="3" Margin="0,60,35,0"/>

        <Button Content="Tilbage" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" Height="50" Width="100" FontSize="22" FontWeight="Bold"/>
        <Button Content="Home" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" Height="50" Width="100" FontSize="22" FontWeight="Bold"/>
        <Button Content="Book" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center" Height="50" Width="100" FontSize="22" FontWeight="Bold"/>

    </Grid>
</Page>
