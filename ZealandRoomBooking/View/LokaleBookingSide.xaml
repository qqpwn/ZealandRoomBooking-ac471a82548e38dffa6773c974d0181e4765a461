<Page
    x:Class="ZealandRoomBooking.View.LokaleBookingSide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZealandRoomBooking.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:ZealandRoomBooking.ViewModel"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
   mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewModel:UserViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding DateBarString, Mode=TwoWay}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="110,20,110,20" TextAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="Bold"/>
        <Button FontFamily="Segoe MDL2 Assets" Content="&#xE72B;" Command="{Binding DayBackwardsCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Height="50" Width="70" Margin="40,0,0,0">

        </Button>

        <Button FontFamily="Segoe MDL2 Assets" Content="&#xE72A;" Command="{Binding DayForwardCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Height="50" Width="70" Margin="35,0,0,0">

        </Button>

        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Height="50" Width="100" FontSize="12" FontWeight="Bold">
            <StackPanel>
                <TextBlock Text="Sorter"></TextBlock>
                <TextBlock Text="Ledighed"></TextBlock>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Height="50" Width="100" FontSize="12" FontWeight="Bold">
            <StackPanel>
                <TextBlock Text="Sorter"></TextBlock>
                <TextBlock Text="Bygning"></TextBlock>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Height="50" Width="100" FontSize="12" FontWeight="Bold">
            <StackPanel>
                <TextBlock Text="Sorter"></TextBlock>
                <TextBlock Text="Etage"></TextBlock>
            </StackPanel>
        </Button>

        <ListView Name="ListViewBookingSide" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Grid.RowSpan="3" Margin="35,0,35,0" ItemsSource="{Binding ListOfRooms, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="{Binding SelectedRoom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ListViewItem Background="{Binding Color, UpdateSourceTrigger=PropertyChanged}">
                        <StackPanel>
                            <TextBlock Text="{Binding Navn}"></TextBlock>
                            <TextBlock Text="{Binding Etage}"></TextBlock>
                            <TextBlock Text="{Binding Bygning}"></TextBlock>
                            <TextBlock Text="{Binding Type}"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <TextBlock Text="Lokaler" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"/>
        
        <Button Content="Refresh" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" Height="50" Width="100" FontSize="22" FontWeight="Bold">
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Click">
                    <core:NavigateToPageAction TargetPage="ZealandRoomBooking.View.LokaleBookingSide"></core:NavigateToPageAction>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Button>

        <Button Content="Home" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" Height="50" Width="100" FontSize="22" FontWeight="Bold">
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Click">
                    <core:NavigateToPageAction TargetPage="ZealandRoomBooking.View.Home"></core:NavigateToPageAction>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Button>

        <Button Content="Book" Command="{Binding BookRoomCommand}" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center" Height="50" Width="100" FontSize="22" FontWeight="Bold">
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Click">
                    <core:NavigateToPageAction TargetPage="ZealandRoomBooking.View.MyBookingsPage"></core:NavigateToPageAction>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Button>

    </Grid>
</Page>
